{
  "name": "graybox",
  "version": "0.1.0",
  "description": "This is a game for programmers, which allows you to understand in general terms how the program interacts with system resources, such as RAM and the I / O system.",
  "source": "src/index.html",
  "scripts": {
    "build": "parcel build ./src/index.html --public-url ./ && cp ./dist/index.html ./dist/404.html",
    "start": "tsc --noEmit && parcel ./src/index.html",
    "test": "jest --silent=false --coverage",
    "lint": "prettier --check . && eslint . && stylelint **/*.scss",
    "lint-fix": "prettier --write . && eslint . --fix && stylelint **/*.scss --fix",
    "prepare": "husky install",
    "predeploy": "npm run build",
    "deploy": "gh-pages -d dist"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/JSConst/Graybox.git"
  },
  "keywords": [
    "programmers game",
    "timekiller"
  ],
  "author": "JSConst",
  "license": "UNLICENSED",
  "bugs": {
    "url": "https://github.com/JSConst/Graybox/issues"
  },
  "homepage": "https://github.com/JSConst/Graybox#readme",
  "devDependencies": {
    "@jamesives/github-pages-deploy-action": "^4.4.0",
    "@parcel/transformer-sass": "^2.7.0",
    "@types/jest": "^29.1.1",
    "@typescript-eslint/eslint-plugin": "^5.38.1",
    "eslint": "^8.24.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-jest": "^27.0.4",
    "gh-pages": "^4.0.0",
    "husky": "^8.0.1",
    "jest": "^29.1.2",
    "jest-environment-jsdom": "^29.1.2",
    "lint-staged": "^13.0.3",
    "parcel": "^2.7.0",
    "parcel-reporter-static-files-copy": "^1.4.0",
    "prettier": "^2.7.1",
    "sass": "^1.55.0",
    "stylelint": "^14.13.0",
    "stylelint-config-prettier": "^9.0.3",
    "stylelint-config-standard": "^28.0.0",
    "stylelint-config-standard-scss": "^5.0.0",
    "ts-jest": "^29.0.3",
    "typescript": "^4.8.4"
  },
  "lint-staged": {
    "*.{css,scss}": "stylelint --fix",
    "*.{js,ts}": "eslint --fix",
    "*.{js,ts,md}": "prettier --write"
  },
  "browserslist": [
    "since 2017-06"
  ],
  "dependencies": {
    "@swc/helpers": "^0.4.11"
  }
}
